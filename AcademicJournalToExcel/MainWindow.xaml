<Window x:Class="AcademicJournalToExcel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Name="Self">
	<Grid>
		<TextBox Name="rowInfoTxt" Margin="10, 10, 10, 40" TextWrapping="Wrap" AcceptsReturn="True"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5" >
			<TextBlock VerticalAlignment="Center" Text="Items Added: " />
			<TextBlock Name="itemsAddedTxt" VerticalAlignment="Center" Margin="5" />
			<Button Content="Add" Margin="5" Width="60" IsDefault="True" Click="Button_Click"/>
			<Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Copy" Margin="5" Width="60" Click="Button_Click_1" />
		</StackPanel>
	</Grid>
</Window>
